pipeline {
    agent any

    tools {
        nodejs 'nodejs-24.7.0'  // <-- Use the exact name from Global Tool Configuration
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Thanaphum-6510110194/Docker-Jenkins-FastAPI.git'
            }
        }

        stage('Build') {
            steps {
                sh 'npm install'
            }
        }

        stage('SonarQube Scan') {
            steps {
                withSonarQubeEnv('sonarqube-25.8.0.112029') {
                                            sh '''
                                                    mvn clean verify sonar:sonar \
                                                        -Dsonar.projectKey=SonarQube-FastAPI \
                                                        -Dsonar.projectName='SonarQube FastAPI' \
                                                        -Dsonar.host.url=http://host.docker.internal:9001/ \
                                                        -Dsonar.token=sqp_2f5ae1e98cf62022dc1a61e19389ea158bbaf0f2
                                            '''
                }
            }
        }

        stage('Quality Gate') {
            steps {
                timeout(time: 5, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }
    }
}
