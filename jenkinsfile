pipeline {
    agent {
        docker {
            image 'openjdk:17-slim'     // Slim Java 17 image that includes basic utilities
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }
    environment {
        SONARQUBE = credentials('sonarqube-fastapi')
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Thanaphum-6510110194/Docker-Jenkins-FastAPI.git'
            }
        }
        stage('Setup Python and venv') {
            steps {
                sh '''#!/bin/bash
                # Install sudo first
                apt-get update && apt-get install -y sudo

                # Update package lists and install required packages
                sudo apt-get update
                sudo DEBIAN_FRONTEND=noninteractive apt-get install -y python3 python3-pip python3-venv wget unzip

                # Create and set permissions for workspace directory
                sudo mkdir -p /app
                sudo chown -R $(id -u):$(id -g) /app
                cd /app

                # Setup Python environment
                python3 -m venv venv
                . venv/bin/activate

                # Install Python dependencies
                python3 -m pip install --upgrade pip
                python3 -m pip install -r requirements.txt
                '''
            }
        }
        
        stage('Run Tests & Coverage') {
            steps {
                sh '''
                venv/bin/pytest --maxfail=1 --disable-warnings -q --cov=app --cov-report=xml
                '''
            }
        }
        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sonarqube-25.8.0.112029') {
                    sh '''
                        export HOME=$PWD
                        wget https://binaries.sonarsource.com/Distribution/sonar-scanner-cli/sonar-scanner-cli-4.8.1.3023-linux.zip
                        unzip sonar-scanner-cli-4.8.1.3023-linux.zip
                        export PATH=$PWD/sonar-scanner-4.8.1.3023-linux/bin:$PATH
                        sonar-scanner \
                          -Dsonar.host.url=http://host.docker.internal:9001 \
                          -Dsonar.login=$SONARQUBE \
                          -Dsonar.projectKey=SonarQube-FastAPI \
                          -Dsonar.sources=app \
                          -Dsonar.tests=test \
                          -Dsonar.python.coverage.reportPaths=coverage.xml
                    '''
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t fastapi-app:latest .'
            }
        }
        stage('Deploy Container') {
            steps {
                sh 'docker run -d -p 8000:8000 fastapi-app:latest'
            }
        }
    }
    post {
        always {
            echo "Pipeline finished"
        }
    }
}
